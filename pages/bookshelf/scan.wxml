<!--pages/bookshelf/scan.wxml-->
<view wx:if="{{useCamera&&!hasResult}}">
<camera
  device-position="back"
  flash="off"
  binderror="error"
  style="width: 100%; height: 300px;"
></camera>
<button type="primary" bindtap="takePhoto">拍照上传</button>
<!-- <view>预览</view>
<image mode="widthFix" src="{{src}}"></image> -->
</view>

<view wx:if="{{hasResult}}">
  <block wx:for="{{searchList}}" wx:key="{{searchList.index}}">
  <book-item index="{{index}}" info-dic='{{item}}' catchupdatecheckbox="updateCheckBox"/>
  </block>
  <button type="primary" bindtap="bookshelfAdd">添加到我的书架</button>
</view>
